section#contact
    .container
      .row
        .col-lg-12.text-center
          h2.section-heading.titul Contact Us
          h3.section-subheading.text-muted Lorem ipsum dolor sit amet consectetur.
      .row
        .col-lg-12
          form#contactForm(name="sentMessage",novalidate)
            .row
              .col-md-6
                .form-group
                  input.form-control#name(type="text",placeholder="Your Name *",required data-validation-required-message="Please enter your name.")
                  p.help-block.text-danger
                .form-group
                  input.form-control#email(type="email",placeholder="Your Email *",required data-validation-required-message="Please enter your email address.")
                  p.help-block.text-danger
                .form-group
                  input.form-control#phone(type="tel",placeholder="Your Phone *",required data-validation-required-message="Please enter your phone number.")
                  p.help-block.text-danger
              .col-md-6
                .form-group
                  textarea.form-control#message(type="text",placeholder="Your Message *",required data-validation-required-message="Please enter a message.")
                  p.help-block.text-danger
              .clearfix
              .col-lg-12.text-center
                #success
                  button.btn.btn-xl(type="submit") Send Message